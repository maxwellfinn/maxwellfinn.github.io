    <!-- Calculator JavaScript -->
    <script>
        // Calculator Logic
        const Calculator = {
            // Research-based constants
            CONTEXT_SWITCH_COST_MINUTES: 23, // UC Irvine study
            PRODUCTIVITY_BOOST: 0.42, // Microsoft/NEC research
            SECOND_SCREEN_SWITCH_REDUCTION: 0.65, // Reduction in full context switches
            WEEKS_PER_YEAR: 52,

            // DOM Elements
            elements: {},

            init() {
                // Cache DOM elements
                this.elements = {
                    hourlyRate: document.getElementById('hourlyRate'),
                    hourlyRateValue: document.getElementById('hourlyRateValue'),
                    hoursPerDay: document.getElementById('hoursPerDay'),
                    hoursPerDayValue: document.getElementById('hoursPerDayValue'),
                    contextSwitches: document.getElementById('contextSwitches'),
                    contextSwitchesValue: document.getElementById('contextSwitchesValue'),
                    daysPerWeek: document.getElementById('daysPerWeek'),
                    daysPerWeekValue: document.getElementById('daysPerWeekValue'),
                    weeklyTimeSaved: document.getElementById('weeklyTimeSaved'),
                    weeklyMoneySaved: document.getElementById('weeklyMoneySaved'),
                    annualTimeSaved: document.getElementById('annualTimeSaved'),
                    annualMoneySaved: document.getElementById('annualMoneySaved')
                };

                // Bind events
                this.bindEvents();

                // Initial calculation
                this.calculate();
            },

            bindEvents() {
                // Hourly rate input
                this.elements.hourlyRate.addEventListener('input', (e) => {
                    this.elements.hourlyRateValue.textContent = e.target.value;
                    this.calculate();
                });

                // Hours per day slider
                this.elements.hoursPerDay.addEventListener('input', (e) => {
                    this.elements.hoursPerDayValue.textContent = e.target.value;
                    this.calculate();
                });

                // Context switches slider
                this.elements.contextSwitches.addEventListener('input', (e) => {
                    this.elements.contextSwitchesValue.textContent = e.target.value;
                    this.calculate();
                });

                // Days per week slider
                this.elements.daysPerWeek.addEventListener('input', (e) => {
                    this.elements.daysPerWeekValue.textContent = e.target.value;
                    this.calculate();
                });
            },

            calculate() {
                // Get input values
                const hourlyRate = parseFloat(this.elements.hourlyRate.value) || 75;
                const hoursPerDay = parseFloat(this.elements.hoursPerDay.value) || 8;
                const contextSwitches = parseInt(this.elements.contextSwitches.value) || 10;
                const daysPerWeek = parseInt(this.elements.daysPerWeek.value) || 5;

                // Calculate daily context switches
                const dailySwitches = contextSwitches * hoursPerDay;

                // Time lost to context switching per day (in hours)
                // Not all switches cause full 23-min loss, so we use a weighted average
                // Full switch cost: 23 min, but degraded over time (diminishing returns)
                // Average effective cost: ~8 minutes per switch for cognitive recovery
                const avgSwitchCostMinutes = 8;
                const dailyTimeLostHours = (dailySwitches * avgSwitchCostMinutes) / 60;

                // With second screen, switches become glances (65% reduction in full switches)
                const timeSavedDaily = dailyTimeLostHours * this.SECOND_SCREEN_SWITCH_REDUCTION;

                // Also factor in general productivity boost (42% on remaining work)
                const remainingWorkHours = hoursPerDay - timeSavedDaily;
                const productivityGainHours = remainingWorkHours * this.PRODUCTIVITY_BOOST * 0.25; // Conservative 25% of theoretical max

                // Total time saved per day
                const totalDailySavings = timeSavedDaily + productivityGainHours;

                // Weekly calculations
                const weeklyTimeSavedHours = totalDailySavings * daysPerWeek;
                const weeklyMoneySaved = weeklyTimeSavedHours * hourlyRate;

                // Annual calculations
                const annualTimeSavedHours = weeklyTimeSavedHours * this.WEEKS_PER_YEAR;
                const annualMoneySaved = weeklyMoneySaved * this.WEEKS_PER_YEAR;

                // Update UI with animations
                this.updateResults({
                    weeklyTime: weeklyTimeSavedHours,
                    weeklyMoney: weeklyMoneySaved,
                    annualTime: annualTimeSavedHours,
                    annualMoney: annualMoneySaved
                });
            },

            updateResults(results) {
                // Format and display results
                this.elements.weeklyTimeSaved.textContent = this.formatTime(results.weeklyTime);
                this.elements.weeklyMoneySaved.textContent = this.formatMoney(results.weeklyMoney);
                this.elements.annualTimeSaved.textContent = Math.round(results.annualTime) + ' hrs';
                this.elements.annualMoneySaved.textContent = this.formatMoney(results.annualMoney);

                // Add animation class
                const resultElements = document.querySelectorAll('.result-value');
                resultElements.forEach(el => {
                    el.style.animation = 'none';
                    el.offsetHeight; // Trigger reflow
                    el.style.animation = 'countUp 0.3s ease-out';
                });
            },

            formatTime(hours) {
                if (hours < 1) {
                    return Math.round(hours * 60) + ' minutes';
                }
                return hours.toFixed(1) + ' hours';
            },

            formatMoney(amount) {
                if (amount >= 1000) {
                    return '$' + (amount / 1000).toFixed(1) + 'K';
                }
                return '$' + Math.round(amount).toLocaleString();
            }
        };

        // Initialize calculator when DOM is ready
        document.addEventListener('DOMContentLoaded', () => {
            Calculator.init();
        });

        // Track scroll depth for engagement (optional analytics hook)
        let maxScroll = 0;
        window.addEventListener('scroll', () => {
            const scrollPercent = (window.scrollY / (document.body.scrollHeight - window.innerHeight)) * 100;
            if (scrollPercent > maxScroll) {
                maxScroll = scrollPercent;
            }
        });
    </script>
</body>
</html>
